@model LibraryManagementSystem.EF_Models.LmsInventory

<h3>Edit Inventory</h3>
<div>
    <form asp-action="Edit" enctype="multipart/form-data">

        <input type="hidden" asp-for="Id" /><br />
        <input type="hidden" asp-for="CreatedDate" /><br />
        <input type="hidden" asp-for="ImagePath" />
        <div>
            <label>BookTitle:</label><br />
            <input type="text" asp-for="BookTitle" class="form-control" />
            <span asp-validation-for="BookTitle" class="text-danger"></span>
        </div>

        <div>
            <label>Book Author:</label><br />
            <input type="text" asp-for="BookAuthor" class="form-control" />
            <span asp-validation-for="BookAuthor" class="text-danger"></span>
        </div>

        <div>
            <label>Book Version:</label><br />
            <input type="text" asp-for="BookVersion" class="form-control" />
            <span asp-validation-for="BookVersion" class="text-danger"></span>
        </div>

        <div>
            <label>Code Description:</label><br />
            <select asp-for="BookCode" class="form-control" asp-items="ViewBag.BookCode"></select>
            <span asp-validation-for="BookCode" class="text-danger"></span>
            
        </div>

        <div>
            <label>Book Genre:</label><br />
            <select asp-for="BookGenreId" class="form-control" asp-items="ViewBag.BookGenre"></select>
            <span asp-validation-for="BookGenreId" class="text-danger"></span>
        </div>

     @*   <div>
            <label>Is Issued:</label><br />
            <input type="text" asp-for="IsIssued" class="form-control" />
            <span asp-validation-for="IsIssued" class="text-danger"></span>
        </div>*@

        <div class="form-group">
            <label asp-for="ImagePath" class="control-label"></label>
            <input type="file" asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <button class="btn btn-primary mt-2" type="submit">Submit</button>
        <a asp-action="Index" class="btn btn-info mt-2">Cancel</a>

    </form>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}





    
