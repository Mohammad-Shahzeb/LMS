@model LibraryManagementSystem.Models.LoginModel




<div>
<h3 style="text-align: center">Staff Login</h3>

<div class="text-center">
        @if (ViewBag.message is not null)
        {
            <span class="text-danger">@ViewBag.message</span>
        }
</div>


<form asp-action="StaffLogin" method="post">

    <div class="row">

        <div class="col-4">

        </div>
        <div class=" col-4">
            <div>
                    <input type="email" class="form-control" placeholder="Email Address" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"  ></span>
            </div>
            <div>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                <div  class="text-center mt-3">
            <button type="submit" class="btn btn-primary ">Submit</button>
                    <a asp-action="StudentLogin" class="btn btn-primary">Student Login</a>
            </div>
        </div>
       

       

    </div>


</form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

