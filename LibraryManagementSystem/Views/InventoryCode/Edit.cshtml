@model LibraryManagementSystem.EF_Models.LmsInventoryCode

<style>
    .mlcustom {
        margin-left: 15px !important;
    }
</style>

<h3>Edit Book Code</h3>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" /><br />

    <div>
        <label>Book Code:</label><br />
        <input type="text" class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div>
        <label>Code Description:</label><br />
        <input type="text" class="form-control" asp-for="CodeDescription"/>
        <span asp-validation-for="CodeDescription" class="text-danger"></span>
    </div>

    <button class="btn btn-primary mt-2" type="submit">Submit</button>
    <a asp-action="Index" class="btn btn-info mt-2 mlcustom">Cancel</a>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
}
